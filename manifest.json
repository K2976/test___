{
  "manifest_version": 3,
  "name": "Auto Connect",
  "version": "1.1",
  "description": "Auto login to college WiFi only when needed.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["http://192.168.4.1/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://192.168.4.1/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}